{
  "title": "WebSearch RAG Bot - System Overview",
  "tags": ["rag-bot", "system"],
  "style": "dark",
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Request Rate",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(rag_requests_total[5m])",
          "legendFormat": "RAG Service - {{endpoint}}"
        },
        {
          "expr": "rate(backend_requests_total[5m])",
          "legendFormat": "Backend - {{endpoint}}"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "Response Time",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(rag_request_duration_seconds_bucket[5m]))",
          "legendFormat": "RAG Service - 95th percentile"
        },
        {
          "expr": "histogram_quantile(0.95, rate(backend_request_duration_seconds_bucket[5m]))",
          "legendFormat": "Backend - 95th percentile"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
    },
    {
      "id": 3,
      "title": "Error Rate",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(rag_requests_total{status=~\"5..\"}[5m])",
          "legendFormat": "RAG Service Errors"
        },
        {
          "expr": "rate(backend_requests_total{status=~\"5..\"}[5m])",
          "legendFormat": "Backend Errors"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
    },
    {
      "id": 4,
      "title": "Active Connections",
      "type": "stat",
      "targets": [
        {
          "expr": "rag_active_connections",
          "legendFormat": "RAG Service"
        },
        {
          "expr": "backend_active_connections",
          "legendFormat": "Backend"
        }
      ],
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8}
    },
    {
      "id": 5,
      "title": "GraphQL Operations",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(graphql_operations_total[5m])",
          "legendFormat": "{{operation}} - {{type}}"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
    },
    {
      "id": 6,
      "title": "Vector Database Status",
      "type": "stat", 
      "targets": [
        {
          "expr": "collections_vector_total",
          "legendFormat": "Total Vectors"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "30s"
}
