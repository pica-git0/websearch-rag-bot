{
  "id": null,
  "title": "Backend Response Monitoring",
  "tags": ["backend", "monitoring", "http"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Total Requests",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(backend_requests_total)",
          "legendFormat": "Total Requests"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 1000},
              {"color": "red", "value": 5000}
            ]
          }
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "Success Rate (%)",
      "type": "stat", 
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "(sum(backend_requests_total{status=~\"2..\"})) / (sum(backend_requests_total)) * 100",
          "legendFormat": "Success Rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 95},
              {"color": "green", "value": 99}
            ]
          }
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
    },
    {
      "id": 3,
      "title": "Error Rate (%)",
      "type": "stat",
      "datasource": "Prometheus", 
      "targets": [
        {
          "expr": "(sum(backend_requests_total{status=~\"[45]..\"})) / (sum(backend_requests_total)) * 100",
          "legendFormat": "Error Rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 5}
            ]
          }
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
    },
    {
      "id": 4,
      "title": "Average Response Time",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "avg(backend_request_duration_seconds_sum / backend_request_duration_seconds_count) * 1000",
          "legendFormat": "Avg Response Time"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 500},
              {"color": "red", "value": 1000}
            ]
          }
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
    },
    {
      "id": 5,
      "title": "Request Rate (per minute)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(backend_requests_total[5m]) * 60",
          "legendFormat": "Requests/min"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
    },
    {
      "id": 6,
      "title": "Response Status Codes",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(backend_requests_total{status=~\"2..\"}[5m]) * 60",
          "legendFormat": "2xx Success"
        },
        {
          "expr": "rate(backend_requests_total{status=~\"4..\"}[5m]) * 60", 
          "legendFormat": "4xx Client Error"
        },
        {
          "expr": "rate(backend_requests_total{status=~\"5..\"}[5m]) * 60",
          "legendFormat": "5xx Server Error"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          }
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "2xx Success"},
            "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "green"}}]
          },
          {
            "matcher": {"id": "byName", "options": "4xx Client Error"},
            "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "yellow"}}]
          },
          {
            "matcher": {"id": "byName", "options": "5xx Server Error"},
            "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}]
          }
        ]
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
    },
    {
      "id": 7,
      "title": "Response Time Distribution",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(backend_request_duration_seconds_bucket[5m])) * 1000",
          "legendFormat": "50th percentile"
        },
        {
          "expr": "histogram_quantile(0.95, rate(backend_request_duration_seconds_bucket[5m])) * 1000",
          "legendFormat": "95th percentile"
        },
        {
          "expr": "histogram_quantile(0.99, rate(backend_request_duration_seconds_bucket[5m])) * 1000", 
          "legendFormat": "99th percentile"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
    },
    {
      "id": 8,
      "title": "Top Endpoints by Request Count",
      "type": "table",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "topk(10, sum by (endpoint) (backend_requests_total))",
          "legendFormat": "{{endpoint}}",
          "format": "table",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "displayMode": "basic"
          }
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
    },
    {
      "id": 9,
      "title": "GraphQL Operations",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(graphql_operations_total[5m]) * 60",
          "legendFormat": "{{operation}} ({{type}})"
        }
      ],
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24}
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "30s"
}